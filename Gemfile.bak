source 'https://rubygems.org'

ruby '2.0.0'

gem 'rails', '4.1.1'
gem 'thin', '~> 1.6.3'

gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'

gem 'jquery-rails'
gem 'turbolinks'

gem 'jbuilder', '~> 2.0'

gem 'sdoc', '~> 0.4.0',          group: :doc

group :development do
	gem 'sqlite3'
	gem 'spring'
  gem 'better_errors'
  gem 'byebug'
end

group :test do
  gem 'rspec-rails', '~> 3.0.0'
  gem 'factory_girl_rails'
  gem 'shoulda-matchers'
  gem 'simplecov'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end

gem 'puma'
gem 'devise'
gem 'activeadmin', github: 'activeadmin'
gem 'active_admin_import' , '2.1.1'
gem 'newrelic_rpm'
gem 'geocoder'