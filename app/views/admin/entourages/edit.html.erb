<div class="row">
  <%= link_to "<- Retourner à l'entourage", [:admin, @entourage] %>
  <div class="h1">
    <span>Editer l'entourage</span>
    <div class="pull-right">
      <% case @entourage.group_type %>
      <% when 'action' %>
        <%= link_to "Changer en évènement",
                    edit_type_admin_entourage_path(@entourage, to: :outing),
                    class: "btn btn-primary" %>
        <%= link_to "Changer en groupe",
                    edit_type_admin_entourage_path(@entourage, to: :group),
                    class: "btn btn-primary" %>
      <% when 'outing' %>
        <%= link_to "Changer en action",
                    edit_type_admin_entourage_path(@entourage, to: :action),
                    class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: "form" %>
