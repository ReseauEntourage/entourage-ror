<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class='col-sm-8'>
        <h3 class="panel-title"><%= "#{@entourage.id} - #{@entourage.title.try(:capitalize)}" %></h3>
      </div>
      <div class='col-sm-4 '>
        <div class='pull-right'>
          <%= entourage_state_label(@entourage) %>
          <%= entourage_type_label(@entourage) %>
        </div>
      </div>
    </div>


  </div>

  <div class="panel-body">
    <%= render partial: "admin/entourages/show/details", entourage: @entourage %>
    <%= render partial: "admin/entourages/show/members_list", members: @members %>
    <%= render partial: "admin/entourages/show/invitations_list", invitations: @invitations %>
