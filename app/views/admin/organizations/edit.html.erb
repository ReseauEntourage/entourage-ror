<ol class="breadcrumb">
  <li><%= link_to "Maraudes - Liste des associations", admin_organizations_path %></li>
  <li><%= @organization.name %></li>
</ol>

<div class="row">
  <h1>Éditer l'association</h1>
</div>

<ul class="nav nav-tabs" role="tablist" style="margin-bottom: 2rem">
  <li role="presentation"><%= link_to "Membres", admin_organization_path(@organization) %></li>
  <li role="presentation" class="active"><%= link_to "Description", edit_admin_organization_path(@organization) %></li>
</ul>

<%= form_for([:admin, @organization], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= render partial: "layouts/errors", locals: {obj: @organization} %>

  <div class="control-group">
    <%= f.label :name,"Nom", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description,"Description", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :description, class: "form-control", required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :phone,"Téléphone", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :phone, class: "form-control", required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address,"Adresse", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :address, class: "form-control", required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email,"Email", class: "control-label" %>
    <div class="controls">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :website_url,"Site web", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :website_url, class: "form-control" %>
    </div>
  </div>

  <br>
  <div class="control-group">
    <label>Cette association apparaîtra dans les statistiques sur le site entourage</label>
    <%= f.check_box :test_organization, {:checked => !@organization.test_organization}, 0, 1 %>
  </div>

  <br>
  <%= f.submit "Enregistrer", class: "btn btn-success" %>
  <%= link_to "Annuler", admin_organizations_path, class: "btn btn-default" %>
<% end %>
