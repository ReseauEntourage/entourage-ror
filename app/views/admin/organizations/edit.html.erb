<div class="row">
  <h1>Editer l'assocaition</h1>
</div>

<%= form_for([:admin, @organization], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= render partial: "layouts/errors", locals: {obj: @organization} %>

  <div class="control-group">
    <%= f.label :name,"Nom", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description,"Description", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :description, class: "form-control", required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :phone,"Téléphone", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :phone, class: "form-control", required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address,"Addresse", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :address, class: "form-control", required: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email,"Email", class: "control-label" %>
    <div class="controls">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :website_url,"Site web", class: "control-label" %>
    <div class="controls">
      <%= f.text_field :website_url, class: "form-control" %>
    </div>
  </div>

  <br>
  <%= f.submit "Sauver", class: "btn btn-success" %>
  <%= link_to "Annuler", admin_users_path, class: "btn btn-default" %>
<% end %>