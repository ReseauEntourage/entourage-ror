  <li role="presentation"><%= link_to "Description", edit_admin_organization_path(@organization) %></li>
</ul>

<table class="table">
  <% if @members.empty? %>
    <tr>
      <td>Cette organisation n'a pas de membres.</td>
    </tr>
  <% end %>

  <% @members.each do |user| %>
    <tr>
      <td><%= link_to UserPresenter.full_name(user), admin_user_path(user) %></td>
      <td><%= link_to user.phone %></td>
    </tr>
  <% end %>
</table>
