<%
  category, title =
    if @partner.staff
      ["Équipes internes", "Nouvelle équipe"]
    else
      ["Associations", "Nouvelle association"]
    end
%>
<div class="container">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8">
      <ol class="breadcrumb">
        <li><%= link_to category, admin_partners_path %></li>
        <li class="active"><%= title %></li>
      </ol>

      <h1><%= title %></h1>

      <%= render partial: 'form' %>
    </div>
  </div>
</div>
