<div class="container">
  <div class="row">
    <div class="col-xs-offset-2 col-xs-8">
      <div class="h1" style="display: flex; align-items: center;">
        <div style="flex-grow: 1">Photos de recommandation</div>
        <%= link_to "Ajouter une photo", new_admin_recommandation_image_path, class: "btn btn-default" %>
      </div>

      <% if @recommandation_images.empty? %>
        <div class="panel panel-warning">
          <div class="panel-heading">
            <h3 class="panel-title">Aucune photo n'est encore spécifiée.</h3>
          </div>
        </div>
      <% else %>
        <table class="custom-table">
          <thead>
            <th>Titre</th>
            <th>Photos</th>
            <th></th>
          </thead>
          <% @recommandation_images.each do |recommandation_image| %>
            <tr>
              <td>
                <%= link_to recommandation_image.title, edit_admin_recommandation_image_path(recommandation_image) %>
              </td>
              <td>
                <%= image_tag(recommandation_image.image_url) if recommandation_image.image_url.present? %>
              </td>
              <td>
                <%= link_to "Modifier", edit_admin_recommandation_image_path(recommandation_image), class: "custom-button custom-primary-inverted" %>
              </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
</div>
