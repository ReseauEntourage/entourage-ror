<div class="container">
  <div style="margin: auto">
    <h1>Groupes de papotages</h1>

    <div class="row">
      <% if @smalltalks.any? %>
        <table class="custom-table">
          <thead>
            <tr>
              <th>#</th>
              <th>UUID</th>
              <th>Nombre</th>
              <th>Utilisateurs</th>
            </tr>
          </thead>
          <tbody>
            <% @smalltalks.each do |smalltalk| %>
              <tr>
                <td><%= link_to smalltalk.id, admin_smalltalk_path(smalltalk) %></td>
                <td><%= link_to smalltalk.uuid_v2, admin_smalltalk_path(smalltalk) %></td>
                <td><%= smalltalk.number_of_people %></td>
                <td>
                  <ul>
                    <% smalltalk.accepted_members.each do |member| %>
                      <li><%= link_to member.full_name, edit_admin_user_path(member) %></li>
                    <% end %>
                  </ul>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="alert alert-info" role="alert" style="display: flex; align-items: center">
          <div style="flex-grow: 1">
            Aucun matching de papotage n'a encore été réalisé.
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
