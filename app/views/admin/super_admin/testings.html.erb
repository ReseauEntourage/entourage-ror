  <div id="android-without-rpush">
    <div class="alert alert-notifications" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Notifications</b><br/>
        <b>Prérequis</b> : avoir un compte sur android.<br/>
        <b>Attendu</b> : recevoir une notification.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Android without rpush",
      android_without_rpush_admin_testings_notifications_path(id: "android-without-rpush"),
      method: :post,
      class: "btn btn-notifications",
      remote: true
    %>
  </div>

  <!-- Sms -->
  <div id="send-welcome">
    <div class="alert alert-sms" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Sms</b><br/>
        <b>Prérequis</b> : aucun.<br/>
        <b>Attendu</b> : recevoir une notification avec un code "xxxxxx".
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Send welcome", send_welcome_admin_testings_sms_path(id: "send-welcome"), method: :post, class: "btn btn-sms", remote: true %>
  </div>

  <div id="regenerate">
    <div class="alert alert-sms" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Sms</b><br/>
        <b>Prérequis</b> : aucun.<br/>
        <b>Attendu</b> : recevoir une notification avec un nouveau code.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Regenerate", regenerate_admin_testings_sms_path(id: "regenerate"), method: :post, class: "btn btn-sms", remote: true %>
  </div>

