<div class="container my-4">
  <h2>Outils de test</h2>

  <!-- Jobs -->
  <div id="push-notification-trigger-job">
    <div class="alert alert-jobs" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Jobs</b><br/>
        <b>Prérequis</b> : aucun.<br/>
        <b>Attendu</b> : pas de message d'erreur => job créé.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Push notification trigger job",
      push_notification_trigger_job_admin_testings_jobs_path(id: "push-notification-trigger-job"),
      method: :post,
      class: "btn btn-jobs",
      remote: true
    %>
  </div>

  <div id="notification-job">
    <div class="alert alert-jobs" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Jobs</b><br/>
        <b>Prérequis</b> : aucun.<br/>
        <b>Attendu</b> : pas de message d'erreur => job créé, recevoir une push notif.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Notification job",
      notification_job_admin_testings_jobs_path(id: "notification-job"),
      method: :post,
      class: "btn btn-jobs",
      remote: true
    %>
  </div>

  <!-- Notifications -->
  <div id="user-smalltalk-on-almost-match">
    <div class="alert alert-notifications" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Notifications</b><br/>
        <b>Prérequis</b> : avoir créé une demande, qu'elle ait déjà été matchée ou non.<br/>
        <b>Attendu</b> : recevoir une notification.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Almost match",
      user_smalltalk_on_almost_match_admin_testings_notifications_path(id: "user-smalltalk-on-almost-match"),
      method: :post,
      class: "btn btn-notifications",
      remote: true
    %>
  </div>

  <div id="user-reaction-on-create">
    <div class="alert alert-notifications" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Notifications</b><br/>
        <b>Prérequis</b> : un utilisateur doit avoir réagi à l'un de nos messages.<br/>
        <b>Attendu</b> : recevoir une notification.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "User reaction",
      user_reaction_on_create_admin_testings_notifications_path(id: "user-reaction-on-create"),
      method: :post,
      class: "btn btn-notifications",
      remote: true
    %>
  </div>

  <div id="ios-with-rpush">
    <div class="alert alert-notifications" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Notifications</b><br/>
        <b>Prérequis</b> : avoir un compte sur ios.<br/>
        <b>Attendu</b> : recevoir une notification.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Ios with rpush",
      ios_with_rpush_admin_testings_notifications_path(id: "ios-with-rpush"),
      method: :post,
      class: "btn btn-notifications",
      remote: true
    %>
  </div>

  <div id="ios-without-rpush">
    <div class="alert alert-notifications" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Notifications</b><br/>
        <b>Prérequis</b> : avoir un compte sur ios.<br/>
        <b>Attendu</b> : recevoir une notification.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Ios without rpush",
      ios_without_rpush_admin_testings_notifications_path(id: "ios-without-rpush"),
      method: :post,
      class: "btn btn-notifications",
      remote: true
    %>
  </div>

  <div id="android-with-rpush">
    <div class="alert alert-notifications" role="alert" style="display: flex; align-items: center; margin-top: 30px">
      <div style="flex-grow: 1">
        <b>Notifications</b><br/>
        <b>Prérequis</b> : avoir un compte sur android.<br/>
        <b>Attendu</b> : recevoir une notification.
      </div>
    </div>

    <div data-type="results"></div>

    <%= link_to "Android with rpush",
      android_with_rpush_admin_testings_notifications_path(id: "android-with-rpush"),
