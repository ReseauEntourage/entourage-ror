<div class="user-availability">
  <label class="control-label" for="user_first_name">Disponibilités</label>
  <% if @user.availability.present? %>
    <ul>
      <% @user.availability.each do |day, slots| %>
        <li>
          <strong><%= day_name(day) %>:</strong>
          <%= slots.join(', ') %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>Aucune disponibilité renseignée.</p>
  <% end %>
</div>
