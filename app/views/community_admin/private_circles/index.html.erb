<style>
  .overlay-container {
    position: relative;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .overlay-container a:not(.overlay) {
    position: relative;
    z-index: 2;
  }
</style>

<%= render 'nav', active: :private_circles %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-12">
      <table class="table table-hover">
        <thead>
          <tr>
            <td class="text-right pr-0 pt-0 border-top-0">
              <a href="<%= new_community_admin_private_circle_path %>"
                 class="btn btn-outline-secondary">Créer un cercle privé</a>
            </td>
          </tr>
        </thead>
        <% @private_circles.each do |private_circle| %>
          <tr class="overlay-container">
            <td>
              <%= link_to "", community_admin_private_circle_path(private_circle), class: "overlay" %>
              <%= private_circle.title %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
