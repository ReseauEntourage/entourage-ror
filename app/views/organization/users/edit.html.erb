<div class="container-fluid">
<div class="row">
<div class="col-md-4 col-md-offset-4">
<h2>Modification de <%= @user.full_name %></h2>
<%= simple_form_for @user, url:organization_user_path(@user) do |f| %>
  <%= f.input :first_name, label: "Prénom" %>
  <%= f.input :last_name, label: 'Nom' %>
  <%= f.input :phone, label: 'Téléphone', input_html: { 'data-toggle' => "tooltip", 'data-placement' => "right", 'title' => "De type +33XXXXXXXXX" } %>
  <%= f.input :email, label: 'Email' %>
  <%= f.input :manager, label: 'Administrateur' %>
  <%= f.button :submit, 'Sauvegarder', class: 'btn-primary' %>
  <%= link_to 'Annuler', organization_users_path, class: 'btn btn-danger' %>
<% end %>
</div>
</div>
</div>