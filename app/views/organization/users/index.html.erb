<div class="container-fluid">
<div class="row">
<div class="col-md-10 col-md-offset-1">
<h2>Utilisateurs</h2>
<ul class="list-inline" id="user-list">
<% @organization.users.each do |user| %>
  <li style="text-align: center;">
    <i class="fa fa-user fa-5x"></i>
    <h4><%= user.last_name %><br><%= user.first_name %></h4>
    <%= link_to '', { controller:'organization/users', action: :edit, id:user.id }, class:'btn btn-default fa fa-pencil' %>
    <%= link_to '', { controller:'organization/users', action: :destroy, id: user.id }, method: :delete, data: { confirm: 'Etes-vous sur ?' }, class:'btn btn-default fa fa-trash' %>
    <%= link_to '', { controller:'organization/users', action: :send_sms, id: user.id }, method: :post, class:'btn btn-default fa fa-envelope send_sms', remote: true %>
  </li>
<% end %>
</ul>
</div>
</div>
<div class="row">
<div class="col-md-4 col-md-offset-1">
<h2>Nouvel utilisateur</h2>
  <%= simple_form_for @new_user, url:organization_users_path do |f| %>
    <%= f.input :first_name, label: "Prénom" %>
    <%= f.input :last_name, label: 'Nom' %>
    <%= f.input :phone, label: 'Téléphone', input_html: { 'data-toggle' => "tooltip", 'data-placement' => "right", 'title' => "De type +33XXXXXXXXX" } %>
    <%= f.input :email, label: 'Email' %>
    <%= f.input :manager, label: 'Manager' %>
    <%= f.button :submit, 'Sauvegarder', class: 'btn-primary' %>
  <% end %>
</div>
</div>
</div>