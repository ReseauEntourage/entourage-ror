<div class="row">
  <h1>Mettre à jour votre profil</h1>
</div>

<%= form_for([:test_tunnel, @user], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <%= render partial: "layouts/errors", locals: {obj: @user} %>

  <div class="row">
    <div class="control-group">
      <%= f.label :first_name,"Prénom", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :first_name, class: "form-control", required: true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :last_name,"Nom", class: "control-label" %>
      <div class="controls">
        <%= f.text_field :last_name, class: "form-control", required: true %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :email,"Email", class: "control-label" %>
      <div class="controls">
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <%= f.submit "Mettre à jour", class: "btn btn-success" %>
  </div>
<% end %>